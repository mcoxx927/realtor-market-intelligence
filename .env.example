# Email Configuration for Real Estate Market Analysis Pipeline
# Copy this file to .env and fill in your actual values

# Gmail SMTP Settings (default for Google Workspace)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Your Google Workspace email credentials
# IMPORTANT: Use an App Password, not your regular password
# Generate at: https://myaccount.google.com/security -> App passwords
SMTP_USER=your-email@yourdomain.com
SMTP_PASSWORD=your-app-password-here

# Email sending configuration
EMAIL_FROM=your-email@yourdomain.com

# Multiple recipients (comma-separated)
# Example: recipient1@example.com,recipient2@example.com,recipient3@example.com
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Optional: Control when to send notifications
SEND_ON_SUCCESS=true
SEND_ON_FAILURE=true
INCLUDE_SUMMARY_ATTACHMENT=false

# Include interactive HTML dashboard (with charts) as attachment
# Recipients can download and open in browser for full interactivity
INCLUDE_DASHBOARD_ATTACHMENT=true
